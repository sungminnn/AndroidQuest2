<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뷰 보 드 "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:hint="제목자리제목자리제목자리제목자리제목자리제목자리제목자리제목자리"
        android:id="@+id/viewboard_title"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="2017.00.00"
            android:inputType="date"
            android:id="@+id/viewboard_writedate"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint=" | 조회수 "
            android:id="@+id/viewboard_read"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="00"
            android:id="@+id/viewboard_readcount"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="신청하기"
            android:shadowColor="#CCFFCC"
            android:id="@+id/viewboard_applyuser_btn"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="즐겨찾기"
            android:shadowColor="#CCFFCC"
            android:id="@+id/viewboard_bookmark_btn"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="신고하기"
            android:shadowColor="#CCFFCC"
            android:id="@+id/viewboard_police_btn"/>

    </LinearLayout>


</LinearLayout>